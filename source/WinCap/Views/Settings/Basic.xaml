<UserControl x:Class="WinCap.Views.Settings.Basic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinCap.Views.Settings"
             mc:Ignorable="d" 
             Background="{DynamicResource ThemeBrushKey}"
             Foreground="{DynamicResource ActiveForegroundBrushKey}"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <StackPanel Height="250">
            <TextBlock>
                <Run Text="Basic"/>
            </TextBlock>
        </StackPanel>
        <Rectangle Height="1" Style="{DynamicResource SeparatorRectangleStyleKey}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,4">
            <Button Content="OK" Command="{Binding OkCommand}" MinWidth="90" Margin="4,2" />
            <Button Content="キャンセル" Command="{Binding CancelCommand}" MinWidth="90" Margin="4,2" />
        </StackPanel>
    </StackPanel>
</UserControl>
