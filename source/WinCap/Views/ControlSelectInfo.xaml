<UserControl x:Class="WinCap.Views.ControlSelectInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prop="clr-namespace:WinCap.Properties"
             mc:Ignorable="d" 
             d:DesignWidth="230"
             Foreground="White"
			 Background="#E5000000"
             FontFamily="Meiryo UI">
    <!--d:DataContext="{d:DesignData /SampleData/ControlSelectInfoViewModelSampleData.xaml}"-->
    <Grid Margin="8,8,8,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,1">
            <Run Text="{x:Static prop:Resources.SelectInfo_Name}"/>
            <Run Text=": "/>
        </TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="1" Margin="0,1">
            <Run Text="{Binding ControlInfo.ClassName}"/>
        </TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,1">
            <Run Text="{x:Static prop:Resources.SelectInfo_Position}"/>
            <Run Text=": "/>
        </TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,1">
            <TextBlock.Text>
                <MultiBinding StringFormat="({0},{1})">
                    <Binding Path="ControlInfo.Bounds.X"/>
                    <Binding Path="ControlInfo.Bounds.Y"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,1">
            <Run Text="{x:Static prop:Resources.SelectInfo_Size}"/>
            <Run Text=": "/>
        </TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="1" Margin="0,1">
            <TextBlock.Text>
                <MultiBinding StringFormat="({0} x {1})">
                    <Binding Path="ControlInfo.Bounds.Width"/>
                    <Binding Path="ControlInfo.Bounds.Height"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <Rectangle Grid.Row="3" Grid.ColumnSpan="2"
                   Height="1"
				   Fill="#FFBBBBBB" Margin="0,4" />
        <TextBlock Grid.Row="4" Grid.ColumnSpan="2" Grid.Column="0" Margin="0,1">
            <Run Text="{x:Static prop:Resources.SelectInfo_Description}"/>
        </TextBlock>
    </Grid>
</UserControl>
