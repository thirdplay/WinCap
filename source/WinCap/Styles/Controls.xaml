<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WinCap;component/Styles/Controls.Button.xaml"/>
        <ResourceDictionary Source="/WinCap;component/Styles/Controls.CheckBox.xaml"/>
        <ResourceDictionary Source="/WinCap;component/Styles/Controls.PromptTextBox.xaml"/>
        <ResourceDictionary Source="/WinCap;component/Styles/Controls.RadioButton.xaml"/>
        <ResourceDictionary Source="/WinCap;component/Styles/Controls.ShortcutKeyBox.xaml"/>
        <ResourceDictionary Source="/WinCap;component/Styles/Controls.TabControl.xaml"/>
        <ResourceDictionary Source="/WinCap;component/Styles/Controls.Text.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="SeparatorRectangleStyleKey"
		   TargetType="{x:Type Rectangle}">
        <Setter Property="Fill"
				Value="{DynamicResource InactiveForegroundBrushKey}" />
        <Setter Property="Opacity"
				Value="0.6" />
        <Setter Property="Margin"
                Value="0,0,0,10" />
    </Style>

</ResourceDictionary>