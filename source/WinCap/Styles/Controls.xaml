<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:util="http://schemes.tillable.net/winfx/2017/personal/controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WinCap;component/Styles/Fonts.xaml"/>
        <ResourceDictionary Source="/WinCap;component/Styles/Controls.Button.xaml"/>
        <ResourceDictionary Source="/WinCap;component/Styles/Controls.CheckBox.xaml"/>
        <ResourceDictionary Source="/WinCap;component/Styles/Controls.PromptTextBox.xaml"/>
        <ResourceDictionary Source="/WinCap;component/Styles/Controls.RadioButton.xaml"/>
        <ResourceDictionary Source="/WinCap;component/Styles/Controls.ShortcutKeyBox.xaml"/>
        <ResourceDictionary Source="/WinCap;component/Styles/Controls.TextBlock.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type util:HyperlinkEx}">
        <Setter Property="Foreground"
				Value="{DynamicResource LinkForegroundBrushKey}" />
    </Style>

    <Style x:Key="SeparatorRectangleStyleKey"
		   TargetType="{x:Type Rectangle}">
        <Setter Property="Fill"
				Value="{DynamicResource InactiveForegroundBrushKey}" />
        <Setter Property="Opacity"
				Value="0.6" />
        <Setter Property="Margin"
                Value="0,0,0,10" />
    </Style>

</ResourceDictionary>