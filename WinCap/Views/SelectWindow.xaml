<metro:MetroWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:metro="http://schemes.grabacr.net/winfx/2014/controls"
                   xmlns:Custom="http://schemes.grabacr.net/winfx/2014/chrome"
                   x:Class="WinCap.Views.SelectWindow"
                   mc:Ignorable="d"
                   Title="SelectWindow"
                   Height="350"
                   Width="525"
		           FontFamily="Segoe UI"
		           Background="{DynamicResource ThemeBrushKey}"
		           Foreground="{DynamicResource ActiveForegroundBrushKey}"
		           TextOptions.TextFormattingMode="Display">
    <metro:MetroWindow.MetroChromeBehavior>
        <Custom:MetroChromeBehavior/>
    </metro:MetroWindow.MetroChromeBehavior>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" metro:MetroWindow.IsCaptionBar="True"/>
        <Button Content="Test" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</metro:MetroWindow>
